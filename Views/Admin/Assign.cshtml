@model Nemesys.ViewModels.AdminAssign
@inject NemesysDBContext _context
@{
    ViewData["Title"] = "Assign";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
    
<h1>Assign</h1>

<div class="report-card mt-1">
    <div class="container row">
        <div class="col-10">
            <h4>@Model.report.Title</h4>
            <p>@Model.report.Description</p>
        </div>
        <div class="col-2">
            <button class="p-4 m-3 btn btn-outline-info">
                <i class="far fa-heart"> <span class=""> @Model.report.Likes </span>  </i>


            </button>
        </div>
    </div>
    <div class="container">
        <a class="btn btn-outline-dark details-cta" asp-area="" asp-controller="Report" asp-action="Details" asp-route-id="@Model.report.Id">View Details</a>
    </div>
</div>

@foreach (Investigator investigator in Model.Investigators)
{
    <div class="report-card mt-1">
        <div class="container row">
            <div class="col-10">
                <h4>@investigator.User.UserName</h4>
                <h4>@investigator.ActiveInvestigations</h4>
                <p>Active Investigations</p>
            </div>
            
        </div>
        <div class="container">
            <a class="btn btn-outline-info details-cta"  asp-controller="Admin" asp-action="Assign" asp-route-reportid="@Model.report.Id" asp-route-investigatorid="@investigator.Id">Assign</a>
        </div>
    </div>
}