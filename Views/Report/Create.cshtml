@model CreateReport


<h1>Create</h1>

<form asp-action="Create" method="post" role="form" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Details" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Details" class="form-control"></textarea>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="Location" class="form-control"></textarea>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="status" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="status" class="form-control"></textarea>
            <span asp-validation-for="status" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="HazardType" class="col-md-2"></label>
        <div class="col-md-5">
            <textarea asp-for="HazardType" class="form-control"></textarea>
            <span asp-validation-for="HazardType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Create new Report" />
            <a asp-controller="Report" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</form>
