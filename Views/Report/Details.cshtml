
@{
    ViewData["Title"] = "Details";
}

    <div class="container  report-card report-details border">
        <div class="row">
            <h1 class="mb-5 mt-3 col-xs-10  col-md-10 h4">@Model.Title</h1>
            <div class="col-xs-2  col-md-2">
                <a class="btn btn-outline-info" asp-controller="Report" asp-action="Like" asp-route-id="@Model.Id">
                    <i class="far fa-heart"> <span class=""> @Model.Likes </span>  </i>
                </a>
            </div>
        </div>
        <div class="container">
            <div class="row text-center">
                <p class="col-sm-4"><i class="fas fa-calendar-day"></i>@Model.Date</p>
                <p class="col-sm-4"><i class="fas fa-map-marker-alt"></i> Location: @Model.Location</p>
                <p class="col-sm-4">Status: @Model.Status</p>
            </div>
            <div class="row "><div class="col-12 text-center border-top  border-bottom p-4"><i class="fas fa-exclamation-triangle"></i> @Model.HazardType</div></div>
        </div>


        <div class="flex">
            <div class="row border-bottom">
              
                <div class="col-sm-3  col-md-3 border-right report-image"> <img src="@Model.ImageLocation" class="report-image" alt="Alternate Text" asp-append-version="true"/></div>

                <div class="col-sm-8 col-md-9">@Model.Description</div>
            </div>
        </div>


        <div class="user-details mt-5">

            <div class="reporter-details text-center">
                <h5 class="">Created By</h5>
                <div class="row text-center">
                    
                    <div class="col-sm-6 signin-card text-center">
                        
                            
                         <p class="text-left username ">@Model.Reporter.User.UserName</p>

                          <p class="text-left ">@Model.Reporter.User.Email</p>
                        

                    </div>
                </div>
            </div>


        </div>
    </div>