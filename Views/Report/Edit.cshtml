        <div class="form-group">
            <label asp-for="Location" class="col-md-2 wordseperate"></label>
            <div class="col-md-12">
                <textarea asp-for="Location" class="form-control">@Model.Location</textarea>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 text-center">
                <input type="submit" class="btn btn-outline-dark" value="Edit Report" />
                <a asp-controller="Report" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </form>
</div>