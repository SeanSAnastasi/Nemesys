@model Nemesys.ViewModels.ReportViewModel

<div class="report-card border">
    <h1 class="text-center megrim">  Edit Report</h1>

    <form asp-action="Edit" method="post" role="form" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 wordseperate" ></label>
            <div class="col-md-12">
                <input asp-for="Title" class="form-control" value="@Model.Title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 wordseperate"></label>
            <div class="col-md-12">
                <textarea asp-for="Description" class="form-control addheight">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
